%post
    # These first few commands allow us to find the python3-pip package later
    # on.
    apt-get update -y
    # Using "noninteractive" mode runs apt-get while ensuring that there are
    # no user prompts that would cause the `singularity build` command to hang.
    apt-get install -y --no-install-recommends \
        software-properties-common
    add-apt-repository universe
    # Downloads the latest package lists (important).
    apt-get update -y
    # python3-tk is required by matplotlib.
    apt-get install -y --no-install-recommends \
        build-essential \
        python3 \
        python3-dev \
        python3-tk \
        python3-pip \
        python3-distutils \
        python3-setuptools \
        ffmpeg \
        git \
        openssh-client
    
    # apt-get install git
    # Reduce the size of the image by deleting the package lists we downloaded,
    # which are useless now.
    rm -rf /var/lib/apt/lists/*
    # update pip3
    python3 -m pip install --upgrade pip
    # Install Python modules.
    # pip3 install -r requirements.txt
    pip3 install openpyxl==3.0.7 \
                tqdm==4.61.2 \
                pandas==1.1.5 \
                numpy==1.19.5 \
                opencv-python==4.5.1.48 \
                torch==1.7.0 \
                scipy==1.4.1 \
                retina-face==0.0.4 \
                matplotlib==3.3.4 \
                tables==3.6.1 \
                deepface==0.0.63 \
                Cython==0.29.24 \
                paramiko==2.7.2 \
                git+https://bitbucket.org/arguscognitive/argusutil.git@v0.4.1#subdirectory=python

